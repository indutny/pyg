cc = cc
cxx = c++
ld = $cc
ldxx = $cxx
ar = ar
cflags = -Ideps/parson -Wall -Wextra -g3 -O0
ldflags =
builddir = build

rule cc
  command = $cc $cflags -c $in -o $out

rule ld
  command = $ld $ldflags $in -o $out

# json-parser
build build/json.o: cc deps/parson/parson.c

# pyg
build build/pyg.o: cc src/pyg.c

build pyg: ld build/pyg.o build/json.o
